     <div class=\"secondary-container\">\n          <section class=\"trials\" id=\"trials\">\n            <div v-for=\"i in trialCount\" id=i+10 :key=\"i\">\n              <div class=\"try\">Try {{ i }}</div>\n              <div v-for=\"n in word.length\" :id=\"n\" :key=\"n\">{{n}}</div>\n              <!-- max 7 letters -->\n            </div>\n          </section>\n\n          <footer>\n            <button class=\"check-word\" @click=\"checkWord()\">Check Word</button>\n            <button class=\"hint\" id=\"hint\" @click=\"decrementHints\">{{ hints }} Hint</button>\n          </footer>\n        </div>\n\n        <section class=\"color-hints\">\n          <div class=\"no-style\">Key Colors</div>\n          <div class=\"right-in-place\">Letter is Right And in Place</div>\n          <div class=\"right-not-in-place\">Letter is Right But Not in Place</div>\n          <div class=\"wrong\">Letter is Wrong And Not Exists in Word</div>\n        </section>\n      </div>\n\n    </div>\n  </body>\n</template>\n\n<script>\nexport default {\n  name: 'App',\n  data() {\n    return {\n      trialCount : 1,\n      hints : 3,\n      word : \"hellooo\",\n      idTrial : 10\n    }\n  },\n  mounted(){\n    window.addEventListener('keypress', this.assignLetters)\n    this.initialTrial()\n  },\n  methods:{\n    initialTrial(){\n      document.getElementById(\"trials\").innerHTML += `            <div v-for=\"i in trialCount\" id=i+10 :key=\"i\">\n              <div class=\"try\">Try {{ i }}</div>\n              <div v-for=\"n in word.length\" :id=\"n\" :key=\"n\">{{n}}</div>\n              <!-- max 7 letters -->\n            </div>`\n    },\n    decrementHints(){\n      if(this.hints > 0)\n        this.hints --\n      if(this.hints == 0)\n        this.disableHints()\n\n    },\n    disableHints(){\n      document.getElementById(\"hint\").style.backgroundColor = \"#016264\"\n      document.getElementById(\"hint\").style.color = \"#\"\n    },\n    assignLetters(event){\n      if(event === undefined){\n        console.log(\"bye\")\n      } else {\n        if(event.keyCode == 13){\n          this.checkWord()\n        }\n      }\n    },\n    checkWord(){\n      console.log(\"hiiiii\")\n      for(let i = 0 ;i < this.word.length; i++){\n        console.log(this.word[i])\n        console.log(document.getElementById(String(i)))\n        if(document.getElementById(String(i)).innerHTML == this.word[i]){\n          \n        }\n      }\n    }\n  }\n}\n</script>\n\n<style>\nhtml,body {\n  margin-top: 70px;\n  background-color: #1a202a;\n}\n.main-app {\n  padding: 10px;\n  background-color: #ebebeb;\n  margin: auto;\n  max-width: 800px;\n  min-height: 400px;\n  display: flex;\n  flex-direction: column;\n  position: relative;\n}\n* {\n  font-family: 'Cairo', sans-serif;\n  text-align: center;\n  font-weight: bold;\n}\nheader {\n  background-color: #ffffff;\n  color: #1a202a;\n  padding: 10px 0;\n  font-weight: bold;\n  font-size: 20px;\n}\n.main-container {\n  display: flex;\n  justify-content: space-evenly;\n  position: absolute;\n  height: 80%;\n  bottom: 20px;\n}\n.secondary-container {\n  padding: 10px;\n  width: 50%;\n  display: flex;\n  flex-direction: column;\n  justify-content: space-between;\n}\n.color-hints {\n  width: 48%;\n  padding: 10px;\n}\nfooter {\n  height: 15%;\n  width: 100%;\n  display: flex;\n  justify-content: space-evenly;\n}\n.check-word {\n  font-size: 15px;\n  width: 70%;\n  color: white;\n  background-color: #e84b2d;\n}\n.check-word:hover {\n  background-color: #c03c22;\n  color: #ddd;\n  cursor: pointer;\n}\n.hint {\n  font-size: 15px;\n  width: 20%;\n  color: white;\n  background-color: #007678;\n}\n.hint:hover {\n  color: #ddd;\n  background-color: #016264;\n  cursor: pointer;\n}\nbutton {\n  padding: 5px;\n  border-radius: 3px;\n  border: none;\n}\n.color-hints div {\n  margin: 28px 10px;\n  padding: 0px 5px;\n  background-color: #ffffff;\n  text-align: left;\n  outline: 10px solid #ffffff;\n  border-left: 30px solid black;\n}\n.c