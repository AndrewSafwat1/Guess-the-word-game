{"ast":null,"code":"export default {\n  name: 'App',\n  data() {\n    return {\n      trialCount: 1,\n      hints: 3,\n      word: \"hellooo\",\n      idTrial: 10,\n      currentInputIndex: 0\n    };\n  },\n  mounted() {\n    window.addEventListener('keypress', this.assignLetters);\n    this.newTrial();\n    this.word = this.getWord();\n  },\n  methods: {\n    async getWord() {\n      const apiUrl = 'https://random-word-api.herokuapp.com/word?length=7';\n      // Make a GET request\n      await fetch(apiUrl).then(response => {\n        if (!response.ok) {\n          throw new Error('Network response was not ok');\n        }\n        return response.json();\n      }).then(data => {\n        console.log(data[0]);\n        return data[0];\n      }).catch(error => {\n        console.error('Error:', error);\n      });\n    },\n    newTrial() {\n      let trialText = \"\";\n      trialText += `<div id=\"${this.idTrial}\">\n              <div class=\"try\">Try ${this.idTrial - 9}</div>`;\n      for (let i = 0; i < this.word.length; i++) {\n        trialText += `<div class=\"input\" id=\"${i}\"></div>`;\n      }\n      trialText += `</div>`;\n      document.getElementById(\"trials\").innerHTML += trialText;\n    },\n    useHint() {\n      if (this.hints > 0) {\n        //get random no. instead\n        // this.word = this.word.toUpperCase()\n        console.log(this.word);\n        let place = document.getElementById(String(this.idTrial)).childNodes[0 + 2];\n        place.innerHTML = this.word[0];\n        place.style.backgroundColor = \"#ff9a09\";\n        place.style.color = \"#ffffff\";\n        place.style.border = \"none\";\n        place.style.opacity = \"0.5\";\n        this.hints--;\n      }\n      if (this.hints == 0) this.disableHints();\n    },\n    disableHints() {\n      document.getElementById(\"hint\").style.backgroundColor = \"#016264\";\n      document.getElementById(\"hint\").style.color = \"#\";\n    },\n    assignLetters(event) {\n      if (event === undefined) {\n        console.log(\"bye\");\n      } else {\n        console.log(event);\n        if (event.keyCode == 13 && document.getElementById(\"check-word\") != document.activeElement) {\n          this.checkWord();\n        } else if (event.keyCode >= 48 && event.keyCode <= 57) {\n          //do nothing\n        } else {\n          if (this.currentInputIndex < this.word.length) {\n            // console.log(document.getElementById(String(this.idTrial)).childNodes)\n            document.getElementById(String(this.idTrial)).childNodes[this.currentInputIndex + 2].innerHTML = event.key.toUpperCase();\n            this.currentInputIndex += 1;\n          }\n        }\n      }\n    },\n    checkWord() {\n      this.word = this.word.toUpperCase();\n      let wrongFlag = 0;\n      for (let i = 0; i < this.word.length; i++) {\n        // console.log(this.word[i])\n        // console.log(document.getElementById(String(this.idTrial)).childNodes[i+2].innerHTML)\n        let place = document.getElementById(String(this.idTrial)).childNodes[i + 2];\n        if (place.innerHTML == String(this.word[i])) {\n          place.style.backgroundColor = \"#ff9a09\";\n          place.style.color = \"#ffffff\";\n          place.style.border = \"none\";\n          place.style.opacity = \"0.5\";\n        } else {\n          for (let j = 0; j < this.word.length; j++) {\n            console.log(\"hello\");\n            if (place.innerHTML == String(this.word[j])) {\n              place.style.backgroundColor = \"#06aa88\";\n              place.style.color = \"#ffffff\";\n              place.style.border = \"none\";\n              place.style.opacity = \"0.5\";\n              break;\n            } else if (j == this.word.length - 1) {\n              place.style.backgroundColor = \"#293045\";\n              place.style.color = \"#ffffff\";\n              place.style.border = \"none\";\n              place.style.opacity = \"0.5\";\n            }\n          }\n          wrongFlag = 1;\n        }\n      }\n      this.currentInputIndex = 0;\n      if (wrongFlag) {\n        document.getElementById(String(this.idTrial)).childNodes[1].style.opacity = \"0.5\";\n        this.idTrial += 1;\n        this.newTrial();\n      }\n    }\n  }\n};","map":{"version":3,"names":["name","data","trialCount","hints","word","idTrial","currentInputIndex","mounted","window","addEventListener","assignLetters","newTrial","getWord","methods","apiUrl","fetch","then","response","ok","Error","json","console","log","catch","error","trialText","i","length","document","getElementById","innerHTML","useHint","place","String","childNodes","style","backgroundColor","color","border","opacity","disableHints","event","undefined","keyCode","activeElement","checkWord","key","toUpperCase","wrongFlag","j"],"sources":["E:\\FrontEnd Projects\\guess-the-word\\src\\App.vue"],"sourcesContent":["<template>\n  <body>\n    <div class=\"main-app\">\n      <header>Guess The Word</header>\n      <div class=\"main-container\">\n        <div class=\"secondary-container\">\n          <section class=\"trials\" id=\"trials\">\n          </section>\n\n          <footer>\n            <button class=\"check-word\" id=\"check-word\" @click=\"checkWord()\">Check Word</button>\n            <button class=\"hint\" id=\"hint\" @click=\"useHint\">{{ hints }} Hint</button>\n          </footer>\n        </div>\n\n        <section class=\"color-hints\">\n          <div class=\"no-style\">Key Colors</div>\n          <div class=\"right-in-place\">Letter is Right And in Place</div>\n          <div class=\"right-not-in-place\">Letter is Right But Not in Place</div>\n          <div class=\"wrong\">Letter is Wrong And Not Exists in Word</div>\n        </section>\n      </div>\n\n    </div>\n  </body>\n</template>\n\n<script>\nexport default {\n  name: 'App',\n  data() {\n    return {\n      trialCount : 1,\n      hints : 3,\n      word : \"hellooo\",\n      idTrial : 10,\n      currentInputIndex : 0,\n    }\n  },\n  mounted(){\n    window.addEventListener('keypress', this.assignLetters)\n    this.newTrial()\n    this.word = this.getWord()\n  },\n  methods:{\n    async getWord(){\n      const apiUrl = 'https://random-word-api.herokuapp.com/word?length=7'\n      // Make a GET request\n      await fetch(apiUrl)\n        .then(response => {\n          if (!response.ok) {\n            throw new Error('Network response was not ok');\n          }\n          return response.json();\n        })\n        .then(data => {\n          console.log(data[0]);\n          return data[0]\n        })\n        .catch(error => {\n          console.error('Error:', error);\n        });\n\n    },\n    newTrial(){\n      let trialText = \"\"\n      trialText += `<div id=\"${this.idTrial}\">\n              <div class=\"try\">Try ${this.idTrial-9}</div>`\n      for(let i = 0 ; i < this.word.length ; i++){\n        trialText += `<div class=\"input\" id=\"${i}\"></div>`\n      }\n      trialText += `</div>`\n      document.getElementById(\"trials\").innerHTML += trialText\n    },\n    useHint(){\n      if(this.hints > 0){\n        //get random no. instead\n        // this.word = this.word.toUpperCase()\n        console.log(this.word)\n        let place = document.getElementById(String(this.idTrial)).childNodes[0+2]\n        place.innerHTML = this.word[0]\n        place.style.backgroundColor = \"#ff9a09\"\n        place.style.color = \"#ffffff\"\n        place.style.border = \"none\"\n        place.style.opacity = \"0.5\"\n        this.hints --\n      }\n        \n      if(this.hints == 0)\n        this.disableHints()\n\n    },\n    disableHints(){\n      document.getElementById(\"hint\").style.backgroundColor = \"#016264\"\n      document.getElementById(\"hint\").style.color = \"#\"\n    },\n    assignLetters(event){\n      if(event === undefined){\n        console.log(\"bye\")\n      } else {\n        console.log(event)\n        if(event.keyCode == 13 && document.getElementById(\"check-word\") != document.activeElement){\n          this.checkWord()\n        } else if (event.keyCode >= 48 && event.keyCode <= 57){\n          //do nothing\n        }else {\n          if(this.currentInputIndex < this.word.length){\n            // console.log(document.getElementById(String(this.idTrial)).childNodes)\n            document.getElementById(String(this.idTrial)).childNodes[this.currentInputIndex+2].innerHTML = event.key.toUpperCase()\n            this.currentInputIndex +=1\n          }\n          \n        }\n      }\n    },\n    checkWord(){\n      this.word = this.word.toUpperCase()\n      let wrongFlag = 0\n      for(let i = 0 ;i < this.word.length; i++){\n        // console.log(this.word[i])\n        // console.log(document.getElementById(String(this.idTrial)).childNodes[i+2].innerHTML)\n        let place = document.getElementById(String(this.idTrial)).childNodes[i+2]\n        if(place.innerHTML == String(this.word[i])){\n          place.style.backgroundColor = \"#ff9a09\"\n          place.style.color = \"#ffffff\"\n          place.style.border = \"none\"\n          place.style.opacity = \"0.5\"\n        } else {\n          for(let j = 0 ; j < this.word.length; j++){\n            console.log(\"hello\")\n            if(place.innerHTML == String(this.word[j])){\n              place.style.backgroundColor = \"#06aa88\"\n              place.style.color = \"#ffffff\"\n              place.style.border = \"none\"\n              place.style.opacity = \"0.5\"\n              break;\n            } else if(j == this.word.length-1) {\n              place.style.backgroundColor = \"#293045\"\n              place.style.color = \"#ffffff\"\n              place.style.border = \"none\"\n              place.style.opacity = \"0.5\"\n            }\n          }\n          wrongFlag = 1\n        }\n      }\n      this.currentInputIndex = 0\n      if(wrongFlag){\n        document.getElementById(String(this.idTrial)).childNodes[1].style.opacity = \"0.5\"\n        this.idTrial += 1\n        this.newTrial()\n      }\n        \n    }\n  }\n}\n</script>\n\n<style>\nhtml,body {\n  margin-top: 70px;\n  background-color: #1a202a;\n}\n.main-app {\n  padding: 10px;\n  background-color: #ebebeb;\n  margin: auto;\n  max-width: 800px;\n  min-height: 400px;\n  display: flex;\n  flex-direction: column;\n  position: relative;\n}\n* {\n  font-family: 'Cairo', sans-serif;\n  text-align: center;\n  font-weight: bold;\n}\nheader {\n  background-color: #ffffff;\n  color: #1a202a;\n  padding: 10px 0;\n  font-weight: bold;\n  font-size: 20px;\n}\n.main-container {\n  display: flex;\n  justify-content: space-evenly;\n  position: absolute;\n  height: 80%;\n  bottom: 20px;\n}\n.secondary-container {\n  padding: 10px;\n  width: 50%;\n  display: flex;\n  flex-direction: column;\n  justify-content: space-between;\n}\n.color-hints {\n  width: 45%;\n  padding: 10px;\n}\nfooter {\n  height: 15%;\n  width: 100%;\n  display: flex;\n  justify-content: space-evenly;\n}\n.check-word {\n  font-size: 15px;\n  width: 70%;\n  color: white;\n  background-color: #e84b2d;\n}\n.check-word:hover {\n  background-color: #c03c22;\n  color: #ddd;\n  cursor: pointer;\n}\n.hint {\n  font-size: 15px;\n  width: 20%;\n  color: white;\n  background-color: #007678;\n}\n.hint:hover {\n  color: #ddd;\n  background-color: #016264;\n  cursor: pointer;\n}\nbutton {\n  padding: 5px;\n  border-radius: 3px;\n  border: none;\n}\n.color-hints div {\n  margin: 28px 10px;\n  padding: 0px 5px;\n  background-color: #ffffff;\n  text-align: left;\n  outline: 10px solid #ffffff;\n  border-left: 30px solid black;\n}\n.color-hints .wrong {\n  border-color: #293045;\n}\n.color-hints .right-not-in-place {\n  border-color: #06aa88;\n}\n.color-hints .right-in-place {\n  border-color: #ff9a09;\n}\n.color-hints .no-style {\n  text-align: center;\n  background: none;\n  outline: none;\n  border: none;\n  font-size: 20px;\n}\n.trials {\n  padding: 10px;\n  height: 90%;\n  overflow-y: scroll;\n  overflow-y:auto;\n}\n.trials div {\n  display: flex;\n  align-items: center;\n  margin: 3px 0;\n}\n.trials div div {\n  background-color: #ffffff;\n  width: 40px;\n  height: 40px;\n  border-bottom: 3px solid black;\n  margin: 3px;\n  font-size: 35px;\n}\n.trials div .try {\n  background: none;\n  border: none;\n  font-size: 20px;\n  width: 50px;\n}\n.trials::-webkit-scrollbar {\n    display: block;\n    width: 5px;\n}\n.trials::-webkit-scrollbar-track {\n    background: transparent;\n}\n    \n.trials::-webkit-scrollbar-thumb {\n    background-color: #293045;\n    border-right: none;\n    border-left: none;\n}\n\n.trials::-webkit-scrollbar-track-piece:end {\n    background: transparent;\n    margin-bottom: 10px; \n}\n\n.trials::-webkit-scrollbar-track-piece:start {\n    background: transparent;\n    margin-top: 10px;\n}\n\n.trials .input:hover{\n  background-color: #ddd;\n}\n</style>\n"],"mappings":"AA4BA,eAAe;EACbA,IAAI,EAAE,KAAK;EACXC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,UAAS,EAAI,CAAC;MACdC,KAAI,EAAI,CAAC;MACTC,IAAG,EAAI,SAAS;MAChBC,OAAM,EAAI,EAAE;MACZC,iBAAgB,EAAI;IACtB;EACF,CAAC;EACDC,OAAOA,CAAA,EAAE;IACPC,MAAM,CAACC,gBAAgB,CAAC,UAAU,EAAE,IAAI,CAACC,aAAa;IACtD,IAAI,CAACC,QAAQ,CAAC;IACd,IAAI,CAACP,IAAG,GAAI,IAAI,CAACQ,OAAO,CAAC;EAC3B,CAAC;EACDC,OAAO,EAAC;IACN,MAAMD,OAAOA,CAAA,EAAE;MACb,MAAME,MAAK,GAAI,qDAAoD;MACnE;MACA,MAAMC,KAAK,CAACD,MAAM,EACfE,IAAI,CAACC,QAAO,IAAK;QAChB,IAAI,CAACA,QAAQ,CAACC,EAAE,EAAE;UAChB,MAAM,IAAIC,KAAK,CAAC,6BAA6B,CAAC;QAChD;QACA,OAAOF,QAAQ,CAACG,IAAI,CAAC,CAAC;MACxB,CAAC,EACAJ,IAAI,CAACf,IAAG,IAAK;QACZoB,OAAO,CAACC,GAAG,CAACrB,IAAI,CAAC,CAAC,CAAC,CAAC;QACpB,OAAOA,IAAI,CAAC,CAAC;MACf,CAAC,EACAsB,KAAK,CAACC,KAAI,IAAK;QACdH,OAAO,CAACG,KAAK,CAAC,QAAQ,EAAEA,KAAK,CAAC;MAChC,CAAC,CAAC;IAEN,CAAC;IACDb,QAAQA,CAAA,EAAE;MACR,IAAIc,SAAQ,GAAI,EAAC;MACjBA,SAAQ,IAAM,YAAW,IAAI,CAACpB,OAAQ;qCACP,IAAI,CAACA,OAAO,GAAC,CAAE,QAAM;MACpD,KAAI,IAAIqB,CAAA,GAAI,GAAIA,CAAA,GAAI,IAAI,CAACtB,IAAI,CAACuB,MAAK,EAAID,CAAC,EAAE,EAAC;QACzCD,SAAQ,IAAM,0BAAyBC,CAAE,UAAQ;MACnD;MACAD,SAAQ,IAAM,QAAM;MACpBG,QAAQ,CAACC,cAAc,CAAC,QAAQ,CAAC,CAACC,SAAQ,I